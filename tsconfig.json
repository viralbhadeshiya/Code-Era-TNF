{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "ES2019",
        "rootDir": "./src",
        "outDir": "./lib",
        "noEmitOnError": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "lib": ["ES2020"],
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["node_modules"]
}
